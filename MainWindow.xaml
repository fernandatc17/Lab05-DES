<Window x:Class="Lab05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Grid.Row="0" Text="Sistema de Gestión Neptuno" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- TabControl para organizar las funcionalidades -->
        <TabControl Grid.Row="1">

            <!-- TAB 1: Productos (Punto 8 - relacionado con punto 3) -->
            <TabItem Header="Productos" FontSize="14" Padding="10,5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Botón para cargar productos -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Name="btnCargarProductos" Content="Cargar Productos" 
                                Width="150" Height="35" Click="btnCargarProductos_Click"
                                Background="DodgerBlue" Foreground="White" FontWeight="Bold"/>
                        <TextBlock Name="lblTotalProductos" VerticalAlignment="Center" 
                                   Margin="20,0,0,0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- DataGrid para mostrar productos -->
                    <DataGrid Grid.Row="1" Name="dgProductos" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              AlternatingRowBackground="LightGray"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdProducto}" Width="50"/>
                            <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="200"/>
                            <DataGridTextColumn Header="Cantidad/Unidad" Binding="{Binding CantidadPorUnidad}" Width="120"/>
                            <DataGridTextColumn Header="Precio" Binding="{Binding PrecioUnidad, StringFormat=C}" Width="80"/>
                            <DataGridTextColumn Header="Stock" Binding="{Binding UnidadesEnExistencia}" Width="70"/>
                            <DataGridTextColumn Header="Categoría" Binding="{Binding NombreCategoria}" Width="150"/>
                            <DataGridTextColumn Header="Proveedor" Binding="{Binding NombreProveedor}" Width="200"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 2: Proveedores (Punto 9 - relacionado con punto 6) -->
            <TabItem Header="Proveedores" FontSize="14" Padding="10,5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel de búsqueda -->
                    <GroupBox Grid.Row="0" Header="Búsqueda de Proveedores" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Controles de búsqueda -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre Contacto:" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Name="txtNombreContacto" 
                                     Height="25" Margin="0,0,20,0"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Ciudad:" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Grid.Row="0" Grid.Column="3" Name="txtCiudad" 
                                     Height="25" Margin="0,0,20,0"/>

                            <!-- Botones -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="5" Orientation="Horizontal" 
                                        Margin="0,10,0,0">
                                <Button Name="btnBuscarProveedores" Content="Buscar Proveedores" 
                                        Width="150" Height="35" Click="btnBuscarProveedores_Click"
                                        Background="Green" Foreground="White" FontWeight="Bold" 
                                        Margin="0,0,10,0"/>
                                <Button Name="btnLimpiar" Content="Limpiar" 
                                        Width="100" Height="35" Click="btnLimpiar_Click"
                                        Background="Orange" Foreground="White" FontWeight="Bold"/>
                                <TextBlock Name="lblResultadosProveedores" VerticalAlignment="Center" 
                                           Margin="20,0,0,0" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- DataGrid para mostrar proveedores -->
                    <DataGrid Grid.Row="1" Name="dgProveedores" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              AlternatingRowBackground="LightBlue"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdProveedor}" Width="50"/>
                            <DataGridTextColumn Header="Compañía" Binding="{Binding NombreCompañia}" Width="180"/>
                            <DataGridTextColumn Header="Contacto" Binding="{Binding NombreContacto}" Width="150"/>
                            <DataGridTextColumn Header="Cargo" Binding="{Binding CargoContacto}" Width="120"/>
                            <DataGridTextColumn Header="Ciudad" Binding="{Binding Ciudad}" Width="100"/>
                            <DataGridTextColumn Header="País" Binding="{Binding Pais}" Width="100"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TAB 3: Pedidos por Fecha (Punto 7) -->
            <TabItem Header="Pedidos por Fecha" FontSize="14" Padding="10,5">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Panel de filtros por fecha -->
                    <GroupBox Grid.Row="0" Header="Filtrar Pedidos por Rango de Fechas" Margin="0,0,0,10" Padding="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Controles de fecha -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Fecha Inicio:" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Row="0" Grid.Column="1" Name="dpFechaInicio" 
                                        Height="30" Margin="0,0,20,0"/>

                            <TextBlock Grid.Row="0" Grid.Column="2" Text="Fecha Fin:" 
                                       VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <DatePicker Grid.Row="0" Grid.Column="3" Name="dpFechaFin" 
                                        Height="30" Margin="0,0,20,0"/>

                            <!-- Botones -->
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="5" Orientation="Horizontal" 
                                        Margin="0,10,0,0">
                                <Button Name="btnBuscarPedidos" Content="Buscar Pedidos" 
                                        Width="150" Height="35" Click="btnBuscarPedidos_Click"
                                        Background="Purple" Foreground="White" FontWeight="Bold" 
                                        Margin="0,0,10,0"/>
                                <Button Name="btnLimpiarPedidos" Content="Limpiar" 
                                        Width="100" Height="35" Click="btnLimpiarPedidos_Click"
                                        Background="Gray" Foreground="White" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>

                    <!-- Panel de resumen -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10"
                                Background="LightYellow" Height="40">
                        <TextBlock Name="lblTotalPedidosTab" VerticalAlignment="Center" 
                                   Margin="15,0,20,0" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Name="lblTotalProductosTab" VerticalAlignment="Center" 
                                   Margin="0,0,20,0" FontWeight="Bold" FontSize="12"/>
                        <TextBlock Name="lblMontoTotalTab" VerticalAlignment="Center" 
                                   Margin="0,0,15,0" FontWeight="Bold" FontSize="12" 
                                   Foreground="DarkGreen"/>
                    </StackPanel>

                    <!-- DataGrid para mostrar detalles de pedidos -->
                    <DataGrid Grid.Row="2" Name="dgPedidosDetalle" 
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              AlternatingRowBackground="LightCyan"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              RowHeaderWidth="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Pedido" Binding="{Binding IdPedido}" Width="80"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding FechaPedido, StringFormat=dd/MM/yyyy}" Width="90"/>
                            <DataGridTextColumn Header="Cliente ID" Binding="{Binding IdCliente}" Width="80"/>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="180"/>
                            <DataGridTextColumn Header="Producto ID" Binding="{Binding IdProducto}" Width="90"/>
                            <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="160"/>
                            <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnidad, StringFormat=C}" Width="90"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="70"/>
                            <DataGridTextColumn Header="Descuento" Binding="{Binding Descuento, StringFormat=P2}" Width="80"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding SubTotal, StringFormat=C}" Width="90"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
